{
    "manifest_version": 3,
    "name": "DoubleTap - Duplicate Tab Detector",
    "version": "0.1",
    "description": "This extension notifies you when you open a duplicate link in the same window or across all windows.",
    "permissions": ["tabs", "notifications", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
